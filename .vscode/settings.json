{
	"eslint.format.enable": true,
	"files.exclude": {
		"vendor": true,
		"docs": true,
		".phpdoc": true
	},
	"search.exclude": {
		"vendor": true,
		"docs": true,
		".phpdoc": true
	},
	"files.watcherExclude": {
		"vendor": true,
		"docs": true,
		".phpdoc": true
	},
	"phpcs.composerJsonPath": "composer.json",
	"phpcs.standard": "./phpcs.xml",
	"php-cs-fixer.config": ".php-cs-fixer.php",
	"php-cs-fixer.onsave": true
}