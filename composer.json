{
	"name": "lesjoursfr/hapiclient-php",
	"type": "library",
	"version": "2.0.0",
	"description": "An HTTP Client using HAL as the format for resources.",
	"keywords": [
		"http",
		"hal",
		"rest",
		"client",
		"HTTP client",
		"HAL client",
		"hapi",
		"hateoas"
	],
	"homepage": "https://github.com/lesjoursfr/hapiclient-php",
	"license": "MIT",
	"authors": [
		{
			"name": "Adrien ERAUD",
			"email": "a.eraud@lesjours.fr",
			"homepage": "https://github.com/e-adrien",
			"role": "Developer"
		}
	],
	"require": {
		"php": "^7.4 || ^8.0",
		"guzzlehttp/guzzle": "^7.5",
		"guzzlehttp/uri-template": "^1.0"
	},
	"require-dev": {
		"phpunit/phpunit": "^9.5.25",
		"squizlabs/php_codesniffer": "^3.7.1",
		"escapestudios/symfony2-coding-standard": "^3.13.0"
	},
	"autoload": {
		"psr-4": {
			"HapiClient\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"HapiClient\\Tests\\": "tests/"
		}
	},
	"archive": {
		"exclude": [
			".github",
			".vscode",
			".gitignore",
			"vendor",
			"composer.lock",
			"composer.phar",
			"phpDocumentor.phar",
			".phpdoc",
			".editorconfig",
			".prettierrc.js",
			".php-cs-fixer.php",
			"phpcs.xml",
			"phpcs-report.xml"
		]
	}
}
